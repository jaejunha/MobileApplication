<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/toggle_firstMon"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:textColor="@color/white"
            android:textOff="월"
            android:textOn="월" />

        <ToggleButton
            android:id="@+id/toggle_firstTue"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:textColor="@color/white"
            android:textOff="화"
            android:textOn="화" />

        <ToggleButton
            android:id="@+id/toggle_firstWed"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:textColor="@color/white"
            android:textOff="수"
            android:textOn="수" />

        <ToggleButton
            android:id="@+id/toggle_firstThu"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:textColor="@color/white"
            android:textOff="목"
            android:textOn="목" />

        <ToggleButton
            android:id="@+id/toggle_firstFri"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:textColor="@color/white"
            android:textOff="금"
            android:textOn="금" />

        <ToggleButton
            android:id="@+id/toggle_firstSat"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/mildBlue"
            android:textColor="@color/white"
            android:textOff="토"
            android:textOn="토" />

        <ToggleButton
            android:id="@+id/toggle_firstSun"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/mildRed"
            android:textColor="@color/white"
            android:textOff="일"
            android:textOn="일" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_secondWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ToggleButton
            android:id="@+id/toggle_secondMon"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:textColor="@color/white"
            android:textOff="월"
            android:textOn="월" />

        <ToggleButton
            android:id="@+id/toggle_secondTue"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:textColor="@color/white"
            android:textOff="화"
            android:textOn="화" />

        <ToggleButton
            android:id="@+id/toggle_secondWed"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:textColor="@color/white"
            android:textOff="수"
            android:textOn="수" />

        <ToggleButton
            android:id="@+id/toggle_secondThu"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:textColor="@color/white"
            android:textOff="목"
            android:textOn="목" />

        <ToggleButton
            android:id="@+id/toggle_secondFri"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:textColor="@color/white"
            android:textOff="금"
            android:textOn="금" />

        <ToggleButton
            android:id="@+id/toggle_secondSat"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/mildBlue"
            android:textColor="@color/white"
            android:textOff="토"
            android:textOn="토" />

        <ToggleButton
            android:id="@+id/toggle_secondSun"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/mildRed"
            android:textColor="@color/white"
            android:textOff="일"
            android:textOn="일" />
    </LinearLayout>
</LinearLayout>