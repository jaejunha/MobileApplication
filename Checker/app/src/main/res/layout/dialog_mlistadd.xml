<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textColor="@color/darkGray"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="항목의 이름을 입력하세요"
            android:textColorHint="@color/gray"
            android:textColor="@color/darkGray"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="분류"
            android:textColor="@color/darkGray"/>
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="분류를 입력하세요"
            android:textColorHint="@color/gray"
            android:textColor="@color/darkGray"/>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="요일 선택"
        android:textColor="@color/darkGray" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ToggleButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:backgroundTint="@color/gray"
            android:textOff="월"
            android:textOn="월"/>
        <ToggleButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:backgroundTint="@color/gray"
            android:textOff="화"
            android:textOn="화"/>
        <ToggleButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:backgroundTint="@color/gray"
            android:textOff="수"
            android:textOn="수"/>
        <ToggleButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:backgroundTint="@color/gray"
            android:textOff="목"
            android:textOn="목"/>
        <ToggleButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:backgroundTint="@color/gray"
            android:textOff="금"
            android:textOn="금"/>
        <ToggleButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:backgroundTint="@color/mildBlue"
            android:textOff="토"
            android:textOn="토"/>
        <ToggleButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:backgroundTint="@color/mildRed"
            android:textOff="일"
            android:textOn="일"/>
    </LinearLayout>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/gray"
        android:textColor="@color/darkGray"
        android:buttonTint="@color/gray"
        android:text="값 설정"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/gray"
        android:textColor="@color/darkGray"
        android:buttonTint="@color/gray"
        android:text="시테크와 연동"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textFactor"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/darkGray"
            android:text="factor : 100%"/>

        <Button
            android:id="@+id/buttonDown"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/gray"
            android:text="▼"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"/>

        <Button
            android:id="@+id/buttonUp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/gray"
            android:text="▲"
            android:textColor="@color/white"
            android:layout_toLeftOf="@id/buttonDown"/>
    </RelativeLayout>
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:progress="0"
        android:max="100" />

</LinearLayout>